<% if post.created_at < Date.today - 365 %>
  <% post.destroy %>
<% end %>

<tr>
	<td><%= link_to post.subject, post %></td>
	<td><%= "#{post.user.name} #{post.user.surname}" %> </td>
	<td><%= post.created_at %></td>
	<td><%= post.comments.count %></td>
	<td><%= link_to "DELETE", post, method: :delete,
	                                data: { confirm: 
	                                	"Are you sure you want to delete this post?" }%></td>
</tr>
