<% if @song.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-error">
      This form contains <%= pluralize(@song.errors.count, "error") %>.
    </div>
    <ul>
    <% @song.errors.full_messages.each do |msg| %>
      <li>* <%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>