         	:roles => {:description => "Electric"}).collect{|u|[[u.name,u.surname].join(" ")]}), :prompt => 'None Assigned' %>
         <%=f.label :piano, "Piano" %>
         <%=f.select :piano, options_for_select(User.includes(:roles).where(
         	:roles => {:description => "Piano"}).collect{|u|[[u.name,u.surname].join(" ")]}), :prompt => 'None Assigned' %>
