<h3>Plan a service</h3>
<%= render 'shared/service_error_messages' %>
<div class="row">
   <div class="span6 offset2">
      <%=form_for(@service) do|f|%>

         <%=f.label :date, "Date" %>
         <span><%=f.date_select :date, id: "dateField" %></span>
         <!-- f.text_field :date, class: "datepicker" -->
         

         <%=f.label :leader, "Leader" %>
         <%=f.select :leader, options_for_select( User.includes(:roles).where(
         	:roles => {:description => "Leader"}).collect{|u|[[u.name,u.surname].join(" ")]}), :prompt => 'None Assigned' %>
         <%=f.label :acoustic, "Acoustic" %>
         <%=f.select :acoustic, options_for_select(User.includes(:roles).where(
         	:roles => {:description => "Acoustic"}).collect{|u|[[u.name,u.surname].join(" ")]}), :prompt => 'None Assigned' %>
