         <%=f.label :drums, "Drums" %>
         <%=f.select :drums, options_for_select(User.includes(:roles).where(
         	:roles => {:description => "Drums"}).collect{|u|[[u.name,u.surname].join(" ")]}), :prompt => 'None Assigned' %>
