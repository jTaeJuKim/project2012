         	:roles => {:description => "PM Sound"}).collect{|u|[[u.name,u.surname].join(" ")]}), :prompt => 'None Assigned' %>


         <%=f.submit "Add to Rota", class: "btn btn-large btn-primary" %>
      <% end %>
    </div>
</div>

