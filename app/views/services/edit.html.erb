<%provide(:title, "Edit service")%>

<div class="row">
   <div class="span6 offset2">
      <%=form_for(@service) do|f|%>
      <%= render 'shared/error_messages', object: f.object %>

         <%=f.label :date, "Date" %>
         <span><%=f.date_select :date %></span>

         <%=f.label :leader, "Leader" %>
         <%=f.select :leader, options_for_select( User.includes(:roles).where(
         	roles: {:description => "Leader"}).collect{|u|[[u.name,u.surname].join(" ")]}, 
            selected: @service.leader)%>
         <%=f.label :acoustic, "Acoustic" %>
         <%=f.select :acoustic, options_for_select(User.includes(:roles).where(
         	roles: {:description => "Acoustic"}).collect{|u|[[u.name,u.surname].join(" ")]},
             selected: @service.acoustic)%>
         <%=f.label :electric, "Electric" %>
         <%=f.select :electric, options_for_select(User.includes(:roles).where(
         	roles: {:description => "Electric"}).collect{|u|[[u.name,u.surname].join(" ")]}, 
            selected: @service.electric)%>
         <%=f.label :piano, "Piano" %>
         <%=f.select :piano, options_for_select(User.includes(:roles).where(
         	roles: {:description => "Piano"}).collect{|u|[[u.name,u.surname].join(" ")]},
             selected: @service.piano)%>
         <%=f.label :bass, "Bass" %>
         <%=f.select :bass, options_for_select(User.includes(:roles).where(
         	roles: {:description => "Bass"}).collect{|u|[[u.name,u.surname].join(" ")]},
             selected: @service.bass) %>
         <%=f.label :drums, "Drums" %>
         <%=f.select :drums, options_for_select(User.includes(:roles).where(
         	roles: {:description => "Drums"}).collect{|u|[[u.name,u.surname].join(" ")]},
            selected: @service.drums) %>
         <%=f.label :sax, "Sax" %>
         <%=f.select :sax, options_for_select(User.includes(:roles).where(
         	roles: {:description => "Sax"}).collect{|u|[[u.name,u.surname].join(" ")]},
            selected: @service.sax) %>
         <%=f.label :violin, "Violin" %>
         <%=f.select :violin, options_for_select(User.includes(:roles).where(
         	roles: {:description => "Violin"}).collect{|u|[[u.name,u.surname].join(" ")]}, 
            selected: @service.violin) %>
         <%=f.label :singers, "Singers" %>
         <%=f.select :singers, options_for_select(["None", "Vox 1", "Vox 2", "Vox 3"],
         selected: @service.singers) %>
         <%=f.label :soundAM, "AM Sound" %>
         <%=f.select :soundAM, options_for_select(User.includes(:roles).where(
         	roles: {:description => "AM Sound"}).collect{|u|[[u.name,u.surname].join(" ")]},
            selected: @service.soundAM)%>
         <%=f.label :soundPM, "PM Sound" %>
         <%=f.select :soundPM, options_for_select(User.includes(:roles).where(
         	roles: {:description => "PM Sound"}).collect{|u|[[u.name,u.surname].join(" ")]}, 
            selected: @service.soundPM) %>

         <%= link_to "Cancel", root_path, class: "btn btn-large btn-danger" %>
         <%=f.submit "Save", class: "btn btn-large btn-primary" %>
      <% end %>

    </div>
</div>
