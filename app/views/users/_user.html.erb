<tr>
	<td><%= link_to user.name + " " + user.surname, user %></td>
	<td><%= user.email %></td>
	<td><%= user.phone %></td>
	<td>UNDER CONSTRUCTION</td>
	<td><%= link_to "Manage Roles", new_assignment_path %></td>
	<% if current_user.admin? && !current_user?(user) %>
	<td><%= link_to "Delete", user, method: :delete,
	                                data: { confirm: 
	                                	"Are you sure you want
	                                	 to delete this user?" }%></td>
	<% else %>
	<td><strong><%= "N/A" %></strong></td>
	<% end %>
</tr>