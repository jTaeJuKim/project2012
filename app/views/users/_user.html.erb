<tr>
	<td><%= link_to user.name + " " + user.surname, user %></td>
	<td><%= user.email %></td>
	<td><%= user.phone %></td>
	<td>
		<%if(user.roles.empty?)%>
		  <strong>No roles assigned yet</strong>
		<%else%>
		  <%= user.roles.select("description").map(&:description).join(", ") %>
		<%end%>
	</td>
	<% if current_user.admin? && !current_user?(user) %>
	<td><%= link_to "Delete", user, method: :delete,
	                                data: { confirm: 
	                                	"Are you sure you want to delete this user?" }%></td>
	<% else %>
		<td><%= "N/A" %></td>
	<% end %>
</tr>	
