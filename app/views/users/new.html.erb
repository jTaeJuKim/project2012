<% provide(:title, 'Sign up') %>

<h1>Sign Up</h1>
<h2>Your email address will be used as your Login ID. Please enter a valid email.</h2>
<div class="row">
   <div class="span6 offset3">
      <%=form_for(@user) do|f|%>
         <%= render 'shared/error_messages' %>

         <%=f.label :name, "First Name" %>
         <%=f.text_field :name%>
         <%=f.label :surname, "Surname" %>
         <%=f.text_field :surname%>
         <%=f.label :email %>
         <%=f.text_field :email %>
         <%=f.label :phone %>
         <%=f.text_field :phone %>
         <%=f.label :password %>
         <%=f.password_field :password%>
         <%=f.label :password_confirmation, "Confirmation"%>
         <%=f.password_field :password_confirmation %>

         <%=f.submit "Create account", class: "btn btn-large btn-primary" %>
      <% end %>
    </div>
</div>
