<h1>Roles#new</h1>
<div class="row">
   <div class="span6 offset3">
      <%=form_for(@role) do|f|%>
         <%= render 'shared/error_messages', object: f.object %>

         <%=f.label :description, "Describe the role below" %>
         <%=f.text_field :description%>
         
         <%=f.submit "Create Role", class: "btn btn-large btn-primary" %>
      <% end %>
    </div>
</div>
