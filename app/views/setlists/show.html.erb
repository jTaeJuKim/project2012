<h2>Setlist for <%= @setlist.date %></h2>


<div id="currentSet">
	<% if(@setSongs.empty?) %>
	  	<h3>No songs selected yet</h3>
	<% else %>

     <table class= "table table-striped table-bordered">
	   <thead>
	     <th>Title</th>
	     <th>Artist</th>
	     <th>Root Key</th>
	   </thead>
	   <tbody>
	  	 <% @setSongs.each do |song| %>
	  	    <tr>
	  	      <td><%= link_to song.title, song_path(song)  %></td>
	  	      <td><%= song.artist %></td>
	  	      <td><%= song.key %></td>
	  	    </tr>
	  	 <%end%>
	  </tbody>
   </table>

   <% end %>
</div>

<% if current_user.admin? %>
<%= link_to "EDIT", edit_setlist_path(@setlist), class: "btn btn-large btn-primary" %>
<% end %>