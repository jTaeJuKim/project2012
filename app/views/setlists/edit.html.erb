<h1>EDIT</h1>
<div class="row">
   <div class="span8">
      <%=form_for(@setlist) do|f|%>
 
         <%=f.label :date, "Set a date" %>
         <span><%=f.date_select :date%><span>

         <%=f.label :morning, "Morning" %>
         <%=f.radio_button :morning, true %>
         <%=f.label :morning, "Evening" %>
         <%=f.radio_button :morning, false %>

         <h2>Library</h2>	

        <div>
          <%= render 'song' %> 

          <div id="currentSet">
        	<h2>Current Setlist</h2>
        	<table class= "table table-striped table-bordered">
	  	      <thead>
	  		    <th>Title</th>
	  		    <th>Artist</th>
	  		    <th>Root Key</th>
	  		    <th>Remove</th>
	  	      </thead>
	  	      <tbody>
	  	      	
	  	      	<% @currentSet = @setlist.songs.collect{|s| [s.title, s.artist, s.key] } %> 
	  	      	
	  	      	<% if(@currentSet.empty?) %>
	  	      	  <tr><td>NO SONGS</td></tr>
	  	      	<% else %>
	  	      	  <%@currentSet.each do |song| %>
	  	      	  <tr>
	  	      		<td><%= song[0] %></td>
	  	      		<td><%= song[1] %></td>
	  	      		<td><%= song[2] %></td>
	  	      		<td><%= link_to "Remove", '#' %></td>
	  	      	  </tr>
	  	      	  <% end %>
	  	      	<% end %>
	  	      </tbody>
	  	    </table>
          </div>
        </div>
         
         <%=f.submit "Save Setlist", class: "btn btn-large btn-primary" %>
      <% end %>


   </div>
</div>
