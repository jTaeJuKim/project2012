<h1>Edit a Setlist</h1>


<div class="row fluid">
   <div class="span8">
      <%=form_for(@setlist) do|f|%>
 
         <h2>Library</h2>	

        <div>
          <div id="library">
            <%= render 'library' %>
          </div>
          <div>
            <%= render 'currentSet' %>
          </div> 
        </div>
         
         <!--f.submit "Save Setlist", class: "btn btn-large btn-primary" %>
         link_to "Cancel Changes", setlist_path(@setlist), class: "btn btn-large btn-danger" --> 
      <% end %>


   </div>

  <div class="span7" id="recommender">
    <h2>Recommendations</h2>
    <div id="recSpace">
      <% if @allocations.empty? %>
      <h3>Please add a song to the setlist in order to view recommendations.</h3>
      <% else %>
      <table class="table table-bordered table-striped">

        <thead>
          <tr>
            <th>Title</th>
            <th>Artist</th>
            <th>Key</th>
            <th>Tags</th>
          </tr>
        </thead>
        <tbody>
              <% @commonSetlists.each do |n| %>
              <% @rec = n.allocations %>
                <% @rec.each do |s| %>
                <tr>
                  <% if s.song.title != @allocations.last.song.title %>
                    <td><%= s.song.title %></td>
                    <td><%= s.song.artist %></td>
                    <td><%= s.song.key %></td>
                    <td><%= "TAGS" %></td>
                    
                  <% end %>
                </tr>
                <% end %>
              <%end%>
             <% end %> 

        </tbody>
      </table>
      
    </div> 
  </div>
</div>

